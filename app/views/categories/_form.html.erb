<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
             <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-darkgrey rounded")  do |f| %>
                <div class="form-group row">
                    
                <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name" %>
                    </div>
                </div>
                    
                <div class="form-group row justify-content-center">
                    <%= f.submit class:"btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>